rules_version = '2';
service firebase.storage {
  // Helper functions
  function isAuthenticated() {
    return request.auth != null;
  }
  
  function isOwner(userId) {
    return isAuthenticated() && request.auth.uid == userId;
  }
  
  function isImageType() {
    return request.resource.contentType.matches('image/.*');
  }
  
  function isValidFileSize() {
    return request.resource.size < 5 * 1024 * 1024; // 5MB
  }

  // Add admin check function
  function isAdmin() {
    return request.auth.uid == "admin";
  }

  // User profile images
  match /users/{userId}/{allPaths=**} {
    allow read: if isAuthenticated();
    allow write: if isOwner(userId) 
                && isImageType() 
                && isValidFileSize();
  }

  // Product images with admin access
  match /products/{productId}/{allPaths=**} {
    allow read: if true;  // Anyone can view product images
    allow write: if isAuthenticated() && (
      isImageType() && 
      isValidFileSize() && 
      (isAdmin() || request.auth != null)  // Allow admin or authenticated users
    );
  }

  // Screenshots
  match /screenshots/{userId}/{allPaths=**} {
    allow read, write: if isAuthenticated();
  }

  // Deny write access to all other paths
  match /{allPaths=**} {
    allow read: if isAuthenticated();
    allow write: if false;
  }
} 